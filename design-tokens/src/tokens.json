{
	"breakpoints": {
		"xs": {
			"name": "phone",
			"width": 320
		},
		"sm": {
			"name": "tablet-portrait",
			"width": 600
		},
		"md": {
			"name": "tablet-landscape",
			"width": 900
		},
		"lg": {
			"name": "desktop",
			"width": 1200
		}
	},
	"constrained-content": {
		"xsmall": 320,
		"small": 640,
		"medium": 960,
		"large": 1300,
		"xlarge": 1680
	},
	"color": {
		"red": "#f00",
		"blue": "#00F",
		"science_blue": "#036ad8",
		"black": "#000",
		"woodsmoke": "#0e1111",
		"emperor": "#515151",
		"white": "#fff",
		"mineshaft": "#383838",
		"my_crimson": "#e71836"
	},
	"font": {
		"family": {
			"body": "'Roboto', Arial, sans-serif",
			"heading": "'Roboto', Arial, sans-serif",
			"mono": "'Roboto Mono', monospace",

			"Oswald": "'Oswald', Arial, sans-serif",
			"Poppins": "'Poppins', Arial, sans-serif",
			"Roboto": "'Roboto', Arial, sans-serif",
			"RobotoCondensed": "'Roboto Condensed', 'Roboto', Arial, sans-serif",
			"RobotoMono": "'Roboto Mono', monospace"
		},
		"size": {
			"heading-1": "3rem",
			"heading-2": "2.25rem",
			"heading-3": "1.75rem",
			"heading-4": "1.5rem",
			"heading-5": "1.25rem",
			"heading-6": "1.125rem",
			"body": "1rem",
			"label": "0.875rem",
			"caption": "0.75rem",
			"tiny": "0.625rem"
		},
		"weight": {
			"light": 200,
			"normal": 400,
			"medium": 400,
			"bold": 600,
			"black": 800
		},
		"lineHeight": {
			"paragraph": 1.5,
			"mid": 1.333333333,
			"short": 1.2,
			"heading": 1.1,
			"tight": 1
		},
		"name": {
			"heading-1": {
				"css": {
					"font": "#{$font-size-heading-1}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
				}
			},
			"heading-2": {
				"css": {
					"font": "#{$font-size-heading-2}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
				}
			}
		}
	},

	"button-variables": {
		"primary": {
			"color": "var(--button-primary-color)",
			"border-color": "var(--button-primary-border-color)",
			"background-color": "var(--button-primary-background-color)"
		},
		"secondary": {
			"color": "var(--button-secondary-color)",
			"border-color": "var(--button-secondary-border-color)",
			"background-color": "var(--button-secondary-background-color)"
		}
	}
}
