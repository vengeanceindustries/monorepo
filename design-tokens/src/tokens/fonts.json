{
	"imports": {
		"Oswald": "Oswald:wght@700",
		"Poppins": "Poppins:wght@700",
		"Roboto": "Roboto:wght@300;500;700",
		"RobotoCondensed": "Roboto+Condensed:wght@700",
		"RobotoMono": "Roboto+Mono:wght@400"
	},
	"family": {
		"Oswald": "'Oswald', Arial, sans-serif",
		"Poppins": "'Poppins', Arial, sans-serif",
		"Roboto": "'Roboto', Arial, sans-serif",
		"RobotoCondensed": "'Roboto Condensed', 'Roboto', Arial, sans-serif",
		"RobotoMono": "'Roboto Mono', monospace"
	},
	"size": {
		"h1": "3rem",
		"h2": "2.25rem",
		"h3": "1.75rem",
		"h4": "1.5rem",
		"h5": "1.25rem",
		"h6": "1.125rem",
		"body": "1rem",
		"label": "0.875rem",
		"caption": "0.75rem",
		"tiny": "0.625rem"
	},
	"weight": {
		"light": 300,
		"medium": 500,
		"bold": 700
	},
	"lineHeight": {
		"paragraph": 1.5,
		"mid": 1.333333333,
		"short": 1.2,
		"heading": 1.1,
		"tight": 1
	},
	"style": {
		"heading-1": {
			"font": "#{$font-size-h1}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
		},
		"heading-2": {
			"font": "#{$font-size-h2}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
		},
		"heading-3": {
			"font": "#{$font-size-h3}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
		},
		"heading-4": {
			"font": "#{$font-size-h4}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
		}
	}
}
