{
	"breakpoints": {
		"xs": {
			"name": "phone",
			"width": 320
		},
		"sm": {
			"name": "tablet-portrait",
			"width": 600
		},
		"md": {
			"name": "tablet-landscape",
			"width": 900
		},
		"lg": {
			"name": "desktop",
			"width": 1200
		}
	},
	"contentWidth": {
		"xsmall": 320,
		"small": 640,
		"medium": 960,
		"large": 1300,
		"xlarge": 1680
	},
	"color": {
		"red": "#f00",
		"blue": "#00F",
		"science_blue": "#036ad8",
		"black": "#000",
		"woodsmoke": "#0e1111",
		"emperor": "#515151",
		"white": "#fff",
		"mineshaft": "#383838",
		"my_crimson": "#e71836"
	},
	"font": {
		"imports": {
			"Oswald": "Oswald:wght@700",
			"Poppins": "Poppins:wght@700",
			"Roboto": "Roboto:wght@300;500;700",
			"RobotoCondensed": "Roboto+Condensed:wght@700",
			"RobotoMono": "Roboto+Mono:wght@400"
		},
		"family": {
			"Oswald": "'Oswald', Arial, sans-serif",
			"Poppins": "'Poppins', Arial, sans-serif",
			"Roboto": "'Roboto', Arial, sans-serif",
			"RobotoCondensed": "'Roboto Condensed', 'Roboto', Arial, sans-serif",
			"RobotoMono": "'Roboto Mono', monospace"
		},
		"size": {
			"h1": "3rem",
			"h2": "2.25rem",
			"h3": "1.75rem",
			"h4": "1.5rem",
			"h5": "1.25rem",
			"h6": "1.125rem",
			"body": "1rem",
			"label": "0.875rem",
			"caption": "0.75rem",
			"tiny": "0.625rem"
		},
		"weight": {
			"light": 300,
			"medium": 500,
			"bold": 700
		},
		"lineHeight": {
			"paragraph": 1.5,
			"mid": 1.333333333,
			"short": 1.2,
			"heading": 1.1,
			"tight": 1
		},
		"style": {
			"heading-1": {
				"font": "#{$font-size-h1}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
			},
			"heading-2": {
				"font": "#{$font-size-h2}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
			},
			"heading-3": {
				"font": "#{$font-size-h3}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
			},
			"heading-4": {
				"font": "#{$font-size-h4}/#{$font-line-height-heading} #{$font-weight-bold} var(--font-family-heading);"
			}
		}
	},

	"button": {
		"primary": {
			"color": "var(--button-primary-color)",
			"border-color": "var(--button-primary-border-color)",
			"background-color": "var(--button-primary-background-color)"
		},
		"secondary": {
			"color": "var(--button-secondary-color)",
			"border-color": "var(--button-secondary-border-color)",
			"background-color": "var(--button-secondary-background-color)"
		}
	},
	"theme": {
		"light": {
			"color": "var(--theme-light-color)",
			"background-color": "var(--theme-light-background-color)"
		},
		"dark": {
			"color": "var(--theme-dark-color)",
			"background-color": "var(--theme-dark-background-color)"
		}
	}
}
