{
	"name": "ui-library",
	"description": "utils to consume JSON design token data and generate SCSS vars, CSS vars, and TS types",
	"version": "1.0.0",
	"license": "MIT",
	"mainSomething": "dist/index",
	"scripts": {
		"build": "build-storybook -s",
		"prebuild": "yarn run build:tokens",
		"start": "start-storybook -p 6006",
		"prestart": "yarn run build:tokens",
		"test": "react-scripts test",
		"eject": "react-scripts eject",
		"build:tokens": "node src/utils/generator.write.js"
	},
	"dependencies": {
		"cross-env": "5.0.5",
		"parcel-bundler": "^1.6.1"
	},
	"devDependencies": {
		"@babel/core": "^7.16.0",
		"@babel/preset-env": "^7.16.4",
		"@babel/preset-react": "^7.16.0",
		"@babel/preset-typescript": "^7.16.0",
		"@storybook/addon-actions": "^6.3.12",
		"@storybook/addon-essentials": "^6.3.12",
		"@storybook/addon-links": "^6.3.12",
		"@storybook/builder-webpack5": "^6.3.12",
		"@storybook/manager-webpack5": "^6.3.12",
		"@storybook/preset-scss": "^1.0.3",
		"@storybook/react": "^6.3.12",
		"@testing-library/react": "^12.1.2",
		"@types/jest": "^27.0.2",
		"@types/react": "^17.0.34",
		"@types/svgo": "^2.6.2",
		"babel-jest": "^27.3.1",
		"babel-loader": "^8.2.3",
		"css-loader": "^6.5.1",
		"extract-svg-path": "^2.1.0",
		"fs-extra": "^5.0.0",
		"html-webpack-plugin": "^5.5.0",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^27.3.1",
		"path-that-svg": "^1.2.4",
		"react": "^17.0.2",
		"sass": "^1.43.5",
		"sass-loader": "^12.3.0",
		"style-loader": "^3.3.1",
		"svgo": "^1.3.2",
		"typescript": "^4.4.4"
	},
	"resolutions": {
		"**/**/fsevents": "^1.2.9",
		"@babel/preset-env": "7.13.8"
	},
	"eslintConfig": {
		"extends": [
			"react-app",
			"react-app/jest"
		],
		"overrides": [
			{
				"files": [
					"**/*.stories.*"
				],
				"rules": {
					"import/no-anonymous-default-export": "off"
				}
			}
		]
	},
	"prettier": {
		"trailingComma": "es5",
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	}
}
